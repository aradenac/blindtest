#form-song
  input.img-icon(type="image" alt="annuler" src="./images/back.jpg" onclick="window.afficherPlaylist()")
  form(id="songUploadForm" action="/submit/song" method="post" enctype="multipart/form-data")
  h2 Ajouter une chanson dans la base de données
  br
  input(id="songInput" type="file" name="song" value="Choose a file" autofocus)
  input(id="submitButton" type="submit" name="submit" value="Upload" disabled onclick="window.afficherChansonsBd()")

#playlists

  script#playlist-template(type='text/template').
    <td class="table-entry"> <%- title %> </td>
    <td class="table-action"> <input class="img-icon deletePlaylistButton" type="image" alt="supprimer" src="./images/delete.jpg"> </td>
    <td class="table-action"> <input class="img-icon editButton" type="image" alt="modifier" src="./images/edit.png"> </td>
      
  h1 Playlists existantes
  div.row
  div(class="column1")
    h2 Rechercher une playlist:
    br
    div.search 
      input.typing-input#search-playlist-input(type="text" name="searchByKW")
      input.img-icon#search-playlist(type="image" alt="rechercher" src="./images/search.jpg")
    table
      thead
        tr
          th Nom de la playlist
          th(colspan="2") 
            input#new-playlist(type="submit" value="Nouvelle playlist" onclick="window.creerPlaylist()")
      tbody#tbody-playlist-ctnr

#modify-playlists
  div(class="column2")  
  h2 Créer/Modifier une playlist:
  input.img-icon(type="image" alt="ajouter" src="./images/add.png" onclick="window.afficherChansonsBd()")
  input.img-icon(type="image" alt="enregistrer" src="./images/save.png" onclick="window.enregistrerPlaylist()")
  input.img-icon(type="image" alt="supprimer" src="./images/delete.jpg" onclick="window.supprimerPlaylist()")
  input.img-icon(type="image" alt="annuler" src="./images/back.jpg" onclick="window.afficherPlaylist()")
  br
  label Nom de la playlist:
  br
  input.typing-input#playlist-name-input(type="text" name="searchByKW")
  table
    thead
      tr
        th Artiste
        th Titre
        th 
    tbody
      tr
        td.table-entry Artiste 1
        td.table-entry Titre 1
        td.table-action 
          input.img-icon(type="image" alt="supprimer" src="./images/delete.jpg" onclick="window.supprimerChansonPlaylist()")
      tr
        td.table-entry Artiste 2
        td.table-entry Titre 2
        td.table-action 
          input.img-icon(type="image" alt="supprimer" src="./images/delete.jpg" onclick="window.supprimerChansonPlaylist()")
  
#songs
  h2 Chansons en base de données:
  br
  input.img-icon(type="image" alt="annuler" src="./images/back.jpg" onclick="window.afficherPlaylist()")
  input.img-icon(type="image" alt="ajouter" src="./images/add.png" onclick="window.ajouterChansonBd()")
  br
  label Recherche par mots-clés:
  br
  div.search 
  input.typing-input#search-song-input(type="text" name="searchByKW")
  input.img-icon#search-song(type="image" alt="rechercher" src="./images/search.jpg")
  table
    thead
        tr
          th Artiste
          th Titre
          th      
          th    
    tbody
        tr
          td.table-entry  Artiste 1
          td.table-entry  Titre 1
          td.table-entry 
            input#add-to-playlist(type="submit" value="Ajouter à la playlist" onclick="window.afficherPlaylist()")
          td.table-action 
            input.img-icon(type="image" alt="supprimer" src="./images/delete.jpg" onclick="window.supprimerChansonBd()")
        tr
          td.table-entry  Artiste 2
          td.table-entry  Titre 2
          td.table-action 
            input.img-icon(type="image" alt="supprimer" src="./images/delete.jpg" onclick="window.supprimerChansonBd()")